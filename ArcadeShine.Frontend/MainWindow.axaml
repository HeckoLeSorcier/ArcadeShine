<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:ArcadeShine.Frontend.Lang"
        xmlns:avalonia="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="ArcadeShine.Frontend.MainWindow"
        Title="Arcade Shine" WindowState="FullScreen">
    <Panel x:Name="RootPanel">
        <Image x:Name="GameBackground" Stretch="UniformToFill">
            <Image.Effect>
                <BlurEffect Radius="48"/>
            </Image.Effect>
        </Image>
        <Grid Background="#55555555">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"></ColumnDefinition>
                <ColumnDefinition Width="20*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Source="Assets/double-arrows.png" Height="64" Width="64" ZIndex="-1"
                   Margin="700 0 0 0" Classes="moveRight">
                <Image.Styles>
                    <Style Selector="Image.moveRight">
                        <Style.Animations>
                            <Animation Duration="0:0:8" IterationCount="INFINITE" >
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="25%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="25%">
                                    <Setter Property="Opacity" Value="1.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0.0"/>
                                </KeyFrame>
                                <KeyFrame Cue="37.5%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="40"/>
                                </KeyFrame>
                                <KeyFrame Cue="37.5%">
                                    <Setter Property="Opacity" Value="1.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0.0"/>
                                </KeyFrame>
                                <KeyFrame Cue="50%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="40"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="40"/>
                                </KeyFrame>
                            </Animation> 
                        </Style.Animations>
                    </Style>
                </Image.Styles>
            </Image>
            <Image Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Source="Assets/double-arrows.png" Height="64" Width="64" ZIndex="-1"
                   Margin="-700 0 0 0" Classes="moveLeft">
                <Image.Styles>
                    <Style Selector="Image.moveLeft">
                        <Style.Animations>
                            <Animation Duration="0:0:8" IterationCount="INFINITE" >
                                <KeyFrame Cue="0%">
                                    <Setter Property="RotateTransform.Angle" Value="180.0"/> 
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="25%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="25%">
                                    <Setter Property="Opacity" Value="1.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0.0"/>
                                </KeyFrame>
                                <KeyFrame Cue="37.5%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="-40"/>
                                </KeyFrame>
                                <KeyFrame Cue="37.5%">
                                    <Setter Property="Opacity" Value="1.0"/>
                                    <Setter Property="TranslateTransform.X" Value="0.0"/>
                                </KeyFrame>
                                <KeyFrame Cue="50%">
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="-40"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="RotateTransform.Angle" Value="180.0"/> 
                                    <Setter Property="Opacity" Value="0.0"/>
                                    <Setter Property="TranslateTransform.X" Value="-40"/>
                                </KeyFrame>
                            </Animation> 
                        </Style.Animations>
                    </Style>
                </Image.Styles>
            </Image>
            <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="Transparent" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Image Height="192" Width="480" MaxWidth="480"
                       x:Name="PreviousGameSystemLogoImage" Opacity="0">
                    <Image.Effect>
                        <DropShadowEffect OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="35"
                                          Opacity="0.5"/>
                    </Image.Effect>
                </Image>
                <Image Height="192" Width="480" MaxWidth="480" 
                       x:Name="CurrentGameSystemLogoImage">
                    <Image.Effect>
                        <DropShadowEffect OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="35"
                                          Opacity="0.5"/>
                    </Image.Effect>
                </Image>
                <Image Height="192" Width="480" MaxWidth="480"
                       x:Name="NextGameSystemLogoImage" Opacity="0">
                    <Image.Effect>
                        <DropShadowEffect OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="35"
                                          Opacity="0.5"/>
                    </Image.Effect>
                </Image>
            </StackPanel>
            <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" 
                  Background="Transparent" 
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center"> 
                    <Image Source="Assets/LeftRightStickIcon.png" >
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <TextBlock Text="{x:Static lang:Resources.SelectCategoryText}" 
                               Margin="50 0 0 0"
                               FontFamily="{StaticResource PoetsenOneFont}" 
                               FontSize="28"
                               Foreground="#EE7"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center"> 
                    <TextBlock x:Name="GameTitleIndexCountTextBlock" 
                               Margin="50 0 0 40"
                               FontSize="18"
                               Foreground="#EEE"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Bottom">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="Assets/UpDownStickIcon.png">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <TextBlock Text="{x:Static lang:Resources.SelectGameText}" 
                               Margin="50 0 0 0"
                               FontFamily="{StaticResource PoetsenOneFont}" 
                               FontSize="28"
                               Foreground="#EE7"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" Background="Transparent">
                <Image Source="Assets/double-arrows.png" 
                       Height="64" Width="64" ZIndex="-1" Margin="0 0 0 600" Classes="moveUp">
                    <Image.Styles>
                        <Style Selector="Image.moveUp">
                            <Style.Animations>
                                <Animation Duration="0:0:8" IterationCount="INFINITE" >
                                    <KeyFrame Cue="0%">
                                        <Setter Property="RotateTransform.Angle" Value="-90"/> 
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="0.0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="12.5%">
                                        <Setter Property="RotateTransform.Angle" Value="-90"/>  
                                        <Setter Property="Opacity" Value="0.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="-40"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="12.5%">
                                        <Setter Property="RotateTransform.Angle" Value="-90"/> 
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="0.0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="25%">
                                        <Setter Property="RotateTransform.Angle" Value="-90"/>  
                                        <Setter Property="Opacity" Value="0.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="-40"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="RotateTransform.Angle" Value="-90"/> 
                                        <Setter Property="Opacity" Value="0.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="-40"/>
                                    </KeyFrame>
                                </Animation> 
                            </Style.Animations>
                        </Style>
                    </Image.Styles>
                </Image>
                <Image Source="Assets/double-arrows.png" 
                       Height="64" Width="64" ZIndex="-1" Margin="0 -100 0 0" Classes="moveDown">
                    <Image.Styles>
                        <Style Selector="Image.moveDown">
                            <Style.Animations>
                                <Animation Duration="0:0:8" IterationCount="INFINITE" >
                                    <KeyFrame Cue="0%">
                                        <Setter Property="RotateTransform.Angle" Value="90"/> 
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="0.0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="12.5%">
                                        <Setter Property="RotateTransform.Angle" Value="90"/>  
                                        <Setter Property="Opacity" Value="0.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="40"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="12.5%">
                                        <Setter Property="RotateTransform.Angle" Value="90"/> 
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="0.0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="25%">
                                        <Setter Property="RotateTransform.Angle" Value="90"/>  
                                        <Setter Property="Opacity" Value="0.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="40"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="RotateTransform.Angle" Value="90"/> 
                                        <Setter Property="Opacity" Value="0.0"/>
                                        <Setter Property="TranslateTransform.Y" Value="40"/>
                                    </KeyFrame>
                                </Animation> 
                            </Style.Animations>
                        </Style>
                    </Image.Styles>
                </Image>
                <StackPanel Background="Transparent" Orientation="Vertical"
                            VerticalAlignment="Top">
                    <Image Height="192" x:Name="PreviousGameLogoImage"
                           Opacity="0.0" Margin="0 -96 0 0">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <Image Height="192" x:Name="CurrentGameLogoImage">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <Image Height="192" x:Name="NextGameLogoImage"
                           Opacity="0.0">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                </StackPanel>
                <TextBlock VerticalAlignment="Bottom" x:Name="GameDescriptionTextBlock"
                           Height="340"
                           Margin="55 770 55 25"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontSize="28">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                          Opacity="1"
                                          BlurRadius="10"
                                          OffsetX="0"
                                          OffsetY="0" />
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
            <DockPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch">
                <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" HorizontalAlignment="Left" Margin="60 15 0 0">
                    <TextBlock x:Name="GameNameTextBlock" FontSize="28">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="GameGenresTextBlock" FontSize="22">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="GameDeveloperTextBlock" FontSize="22">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                  Opacity="1"
                                                  BlurRadius="10"
                                                  OffsetX="0"
                                                  OffsetY="0" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text=" - " FontSize="22">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                  Opacity="1"
                                                  BlurRadius="10"
                                                  OffsetX="0"
                                                  OffsetY="0" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="GameYearTextBlock" FontSize="22">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                  Opacity="1"
                                                  BlurRadius="10"
                                                  OffsetX="0"
                                                  OffsetY="0" />
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                <avalonia:VideoView x:Name="VideoView" DockPanel.Dock="Top" Margin="84 40" VerticalAlignment="Stretch"/>
            </DockPanel>
        </Grid>
        <Panel x:Name="FadePanel" Background="Black" Opacity="0" ZIndex="5"/>
        <Panel x:Name="LoadingPanel" Background="Black" IsVisible="False" ZIndex="10">
            <Image Source="/Assets/loading.png" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Height="128" Width="128">
                <Image.Styles>
                    <Style Selector="Image">
                        <Style.Animations>
                            <Animation Duration="0:0:1" IterationCount="Infinite">
                                <KeyFrame Cue="0%">
                                    <Setter Property="RotateTransform.Angle" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="RotateTransform.Angle" Value="360"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Image.Styles>
            </Image>
        </Panel>
        <Panel x:Name="ExitConfirmationPanel" Background="Transparent" IsVisible="False" ZIndex="10"
               Height="260" Width="780">
            <Border Background="Linen" CornerRadius="35">
                <Border.Effect>
                    <DropShadowEffect OffsetX="0" OffsetY="0" BlurRadius="90" Opacity="0.6" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock HorizontalAlignment="Stretch" Text="Exit Arcade Shine?"
                               TextAlignment="Center" Foreground="BurlyWood" FontSize="36"
                               FontWeight="Bold" FontFamily="{StaticResource PoetsenOneFont}"
                               Margin="0 25 0 0"/>
                    <StackPanel Margin="0 50 0 0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ConfirmExitFrontendButton" Content="Yes" FontSize="32" FontWeight="Bold" 
                                Foreground="Black" Margin="50 0" />
                        <Button x:Name="CancelExitFrontendButton" Content="No" FontSize="32" FontWeight="Bold" 
                                Foreground="Black" Margin="50 0" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Panel>
    </Panel>
</Window>
